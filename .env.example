# Hyperdraft Environment Variables

# AI API Keys
ANTHROPIC_API_KEY=your_anthropic_key_here
OPENAI_API_KEY=your_openai_key_here

# GitHub
GITHUB_TOKEN=your_github_token_here

# Database
DATABASE_URL=postgresql://localhost:5432/hyperdraft

# Game Configuration
DEFAULT_DECK_SIZE=40
MAX_HAND_SIZE=7
STARTING_LIFE=20

# Meta Generation Settings
MIN_CARDS_PER_META=100
MAX_CARDS_PER_META=300
RARITY_DISTRIBUTION=common:60,uncommon:25,rare:12,mythic:3

# Playtesting
PLAYTEST_GAMES_PER_MATCHUP=100
PLAYTEST_TIMEOUT_SECONDS=300
ENABLE_AI_PLAYTESTING=true

# Web Server
PORT=3000
NODE_ENV=development

# Logging
LOG_LEVEL=INFO
LOG_FILE=hyperdraft.log